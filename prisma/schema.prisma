generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String   @id @default(uuid())
  name        String
  address     String
  description String?
  email       String
  phoneNumber String
  bannerUrl   String
  createdAt   DateTime @default(now())
}
